                                                        <Border.Effect>
                                                            <BlurEffect Radius="2" KernelType="Gaussian" />
                                                        </Border.Effect>
                                                    </Border>
                                                    <ContentPresenter TextBlock.FontSize="{TemplateBinding FontSize}" TextBlock.FontFamily="{TemplateBinding FontFamily}" TextBlock.Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{TemplateBinding Content}"></ContentPresenter>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="#09161f" />
                                <Setter Property="Foreground" Value="DeepSkyBlue" />
                                <Setter Property="FontSize" Value="15" />
                                <Setter Property="FontFamily" Value="Fonts/Dosis" />
                                <Setter Property="FontWeight" Value="Medium"></Setter>
                            </Style>
                        </Button.Style>
                    </Button>-->

                    <Button Name="Tasks" BorderThickness="0" Background="#09161f" Content="Tasks" Foreground="DeepSkyBlue" FontSize="15" FontFamily="Fonts/Dosis" FontWeight="Medium" Padding="0,8,0,8" Style="{DynamicResource RoundedButtonStyle}" Click="Page_Click" ></Button>
                </Grid>
                <Grid Name="ProxiesGrid" Grid.Row="3">
                    <Button Name="Proxies" BorderThickness="0" Background="#09161f" Content="Proxies" Foreground="DeepSkyBlue" FontSize="15" FontFamily="Fonts/Dosis" FontWeight="Medium" Padding="0,8,0,8" Style="{DynamicResource RoundedButtonStyle}" Click="Page_Click"  ></Button>
                </Grid>
                <Grid Name="ProfilesGrid" Grid.Row="4">
                    <Button Name="Profiles" BorderThickness="0" Background="#09161f" Content="Profiles" Foreground="DeepSkyBlue" FontSize="15" FontFamily="Fonts/Dosis" FontWeight="Medium" Padding="0,8,0,8" Style="{DynamicResource RoundedButtonStyle}" Click="Page_Click"  ></Button>
                </Grid>
                <Grid Name="AccountsGrid" Grid.Row="5">
                    <Button Name="Accounts" BorderThickness="0" Background="#09161f" Content="Accounts" Foreground="DeepSkyBlue" FontSize="15" FontFamily="Fonts/Dosis" FontWeight="Medium" Padding="0,8,0,8" Style="{DynamicResource RoundedButtonStyle}" Click="Page_Click"  ></Button>
                </Grid>
                <Grid Name="SettingsGrid" Grid.Row="7">
                    <Button Name="Settings" BorderThickness="0" Background="#09161f" Content="Settings" Foreground="DeepSkyBlue" FontSize="15" FontFamily="Fonts/Dosis" FontWeight="Medium" Padding="0,8,0,8" Style="{DynamicResource RoundedButtonStyle}" Click="Page_Click" ></Button>
